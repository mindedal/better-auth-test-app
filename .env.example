# This file contains environment variables that are required for the application to run.
# It should be copied to a file named `.env.local` and filled with your actual values.
# Do NOT commit `.env.local` to version control.

# Database connection string for Prisma.
# Example for PostgreSQL: postgresql://user:password@host:port/database
DATABASE_URL="postgresql://user:password@localhost:5432/betterauth_app?schema=public"

# Public URL of the application. Used by BetterAuth for redirects and trusted origins.
# For local development: http://localhost:3000
NEXT_PUBLIC_APP_URL="http://localhost:3000"

# Secret key for BetterAuth to sign and encrypt session tokens.
# Generate a long, random, and unguessable string (e.g., using `openssl rand -base64 32`).
AUTH_SECRET="your_super_secret_auth_key_here"

# Redis connection URL for Upstash Redis. Used for caching and rate limiting.
# Example: redis://<username>:<password>@<host>:<port>
REDIS_URL="redis://default:YOUR_UPSTASH_REDIS_PASSWORD@YOUR_UPSTASH_REDIS_URL.upstash.io:6379"

# Node.js environment (e.g., "development", "production", "test")
# Used for conditional logic, such as Prisma query logging.
NODE_ENV="development"
